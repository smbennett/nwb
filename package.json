{
  "name": "nwb",
  "description": "A toolkit for React, Preact & Inferno apps, React libraries and other npm modules for the web, with no configuration (until you need it)",
  "version": "0.21.5",
  "license": "MIT",
  "author": "Jonny Buchanan <jonathan.buchanan@gmail.com>",
  "bin": {
    "nwb": "./lib/bin/nwb.js"
  },
  "scripts": {
    "build": "npm run flow && npm run lint && rimraf lib && babel src --out-dir lib --quiet",
    "build:watch": "rimraf lib && babel src --watch --out-dir lib",
    "flow": "flow",
    "lint": "eslint *.js src tests",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run build && npm run test:all",
    "test:coverage": "npm run build && cross-env NODE_ENV=test NWB_TEST=true nyc mocha tests/*-test.js tests/commands/*-test.js",
    "test:all": "cross-env NODE_ENV=test NWB_TEST=true mocha --require babel-register tests/*-test.js tests/commands/*-test.js",
    "test:watch": "cross-env NODE_ENV=test NWB_TEST=true mocha --require babel-register --watch tests/*-test.js"
  },
  "files": [
    "docs",
    "lib",
    "templates",
    "express.js",
    "polyfills.js"
  ],
  "engines": {
    "node": ">=4.8.0"
  },
  "dependencies": {
    "chalk": "2.3.2",
    "copy-template-dir": "1.3.0",
    "cross-spawn": "6.0.5",
    "debug": "3.1.0",
    "detect-port": "1.2.2",
    "figures": "2.0.0",
    "filesize": "3.6.0",
    "fs-extra": "5.0.0",
    "gzip-size": "4.1.0",
    "inquirer": "5.0.1",
    "minimist": "1.2.0",
    "ora": "2.0.0",
    "resolve": "1.5.0",
    "run-series": "1.1.4",
    "semver": "5.5.0",
    "webpack-merge": "4.1.2",

    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-inferno": "4.0.0",
    "babel-plugin-istanbul": "4.1.5",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-react-transform": "3.0.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-syntax-jsx": "6.18.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-plugin-transform-react-jsx-self": "6.22.0",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.10",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-preset-stage-1": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-runtime": "6.26.0",
    "react-transform-catch-errors": "1.0.2",
    "react-transform-hmr": "1.0.4",
    "redbox-noreact": "1.1.0",

    "karma": "2.0.0",
    "diff": "3.4.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.1",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.11",
    "phantomjs-prebuilt": "2.1.16",

    "mocha": "5.0.1",
    "expect": "1.20.2",

    "object-assign": "4.1.1",
    "promise": "8.0.1",
    "whatwg-fetch": "2.0.3",

    "webpack": "4.0.0",
    "autoprefixer": "8.1.0",
    "babel-loader": "7.1.3",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "copy-webpack-plugin": "4.4.2",
    "css-loader": "0.28.10",
    "eventsource-polyfill": "0.9.6",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.9",
    "html-webpack-plugin": "github:webpack-contrib/html-webpack-plugin",
    "npm-install-webpack-plugin": "4.0.5",
    "opn": "5.2.0",
    "postcss-loader": "2.1.0",
    "style-loader": "0.20.2",
    "uglifyjs-webpack-plugin": "1.2.2",
    "url-loader": "0.6.2",
    "webpack-dev-middleware": "2.0.6",
    "webpack-dev-server": "3.0.0",
    "webpack-hot-middleware": "2.21.0"
  },
  "devDependencies": {
    "babel-preset-flow": "6.23.0",
    "babel-register": "6.26.0",
    "cross-env": "5.1.3",
    "eslint-config-jonnybuchanan": "5.0.3",
    "eventsource": "1.0.5",
    "flow-bin": "0.66.0",
    "glob": "7.1.2",
    "nyc": "11.4.1",
    "rimraf": "2.6.2",
    "temp": "0.8.3",
    "tree-kill": "1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/insin/nwb.git"
  },
  "keywords": [
    "development",
    "inferno",
    "preact",
    "react",
    "tooling"
  ],
  "babel": {
    "presets": [
      "flow",
      ["env", {
        "loose": true,
        "targets": {
          "node": 6
        }
      }],
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "env": {
      "test": {
        "plugins": [
          ["istanbul", {
            "include": "src"
          }]
        ]
      }
    }
  },
  "nyc": {
    "instrument": false,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-core/register"
    ],
    "sourceMap": false
  }
}
